// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Platform {
  SPOTIFY
}

model User {
  id                    String                  @id @default(uuid())
  email                 String                  @unique
  password              String
  emailConfirmed        Boolean                 @default(false)
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  spotifyRefreshToken   String?
  JsonWebTokenBlacklist JsonWebTokenBlacklist[]
  backups               Backup[]
  playlists             Playlist[]
  stripeUserId          String?
  stripeSubscriptionId  String?
  // TODO: remove before launch
  // This will be the temporary subscribed flag until the stripe integration is complete
  isSubscribed          Boolean                 @default(false)
}

model JsonWebTokenBlacklist {
  id          String   @id @default(uuid())
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String
  token       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Backup {
  id           String        @id @default(uuid())
  name         String
  manifest     Json?
  createdBy    User          @relation(fields: [createdById], references: [id])
  createdById  String
  playlist     Playlist      @relation(fields: [playlistId], references: [id])
  playlistId   String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  scheduled    Boolean       @default(false)
  cronSchedule String?
  backupEvents BackupEvent[]
}

enum Status {
  PENDING
  STARTED
  COMPLETED
  ERROR
}

model BackupEvent {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  finishedAt DateTime?
  backup     Backup    @relation(fields: [backupId], references: [id])
  backupId   String
  status     Status    @default(PENDING)
  progress   Decimal   @default(0)
}

model Playlist {
  id          String   @id @default(uuid())
  platform    Platform
  playlistId  String
  name        String?
  description String
  imageUrl    String?
  contentHash String
  followers   Int?
  tracks      Json
  backup      Backup?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String
}
